# Server Configuration
PORT=3000
NODE_ENV=development

# CORS Configuration
# Set to specific origin in production (e.g., https://yourdomain.com)
# Use * for development only
CORS_ORIGIN=*

# Logging Configuration
LOG_LEVEL=info
# Options: error, warn, info, http, verbose, debug, silly

# Cron Schedule (RSS feed update frequency)
# Default: every 30 minutes
# Examples:
#   */15 * * * * = every 15 minutes
#   0 * * * * = every hour
#   0 */2 * * * = every 2 hours
CRON_SCHEDULE=*/30 * * * *

# Database Configuration
DATABASE_PATH=./news.db

# Rate Limiting
API_RATE_LIMIT_WINDOW_MS=900000
API_RATE_LIMIT_MAX_REQUESTS=100
REFRESH_RATE_LIMIT_WINDOW_MS=900000
REFRESH_RATE_LIMIT_MAX_REQUESTS=5

# Security
# Set to true in production to enforce HTTPS
FORCE_HTTPS=false
